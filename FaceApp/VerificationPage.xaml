<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaceApp.VerificationPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Entry x:Name="entryImage1" Placeholder="URL iamge 1"/>
            <Entry x:Name="entryImage2" Placeholder="URL iamge 2"/>

            <Button Text="Verify" BackgroundColor="LightBlue" Clicked="Button_Clicked"/>

            <Image x:Name="image1" Aspect="AspectFit" HeightRequest="100" WidthRequest="100"/>
            <Image x:Name="image2" Aspect="AspectFit" HeightRequest="100" WidthRequest="100"/>

            <Label Text="Verification score :"/>
            <Label x:Name="labelResult" Text="0.00" FontAttributes="Bold"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>